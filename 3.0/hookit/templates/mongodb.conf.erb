# This is an example config file for MongoDB.
dbpath = /data/var/db/mongodb
port = 27017
pidfilepath = /data/var/run/mongodb.pid
logpath = /data/var/log/mongodb/mongodb.log
logappend = <%= boxfile[:logappend] %>
nojournal = <%= boxfile[:nojournal] %>
nohttpinterface = true
directoryperdb = <%= boxfile[:directoryperdb] %>
<%= "#{boxfile[:log_verbosity]} = true" if boxfile[:log_verbosity] != '' %>
objcheck = <%= boxfile[:objcheck] %>
noscripting = <%= boxfile[:noscripting] %>
master = true
